generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique @db.String
  username String @unique @db.String
  name     String @db.String

  credentials Credential[]

  createdAt DateTime @default(now()) @map("created_at")

  starting_weight Float? @map("starting_weight")
  current_weight  Float? @map("current_weight")

  foodRestrictions MealType[] @map("food_restrictions")

  healthIssues HealthIssue[] @map("health_issues")

  favorites Favorite[]

  activeDiet Diet? @map("active_diet")

  roles Roles[]
}

enum Roles {
  ADMIN
  DATA
}

enum MealType {
  HALAL
  KOSHER
  VEGAN
  VEGETARIAN
  PESCATARIAN
  GLUTEN_FREE
  NONE
}

enum HealthIssue {
  DIABETES
  HBP
  CANCER
  OBESITY
}

enum Diet {
  KETO
  PALEO
}

enum CredentialType {
  APPLEID
  GOOGLEID
  GITHUBID
  PASSWORDHASH
}

model Credential {
  id    String         @id @default(auto()) @map("_id") @db.ObjectId
  type  CredentialType
  value String         @db.String

  userId String @unique @db.ObjectId

  user User @relation(fields: userId, references: id, onDelete: Cascade)
}

model Recipe {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  ingredients  String @db.String
  instructions String @db.String

  favorites Favorite[]
}

model Favorite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  recipeId  String   @db.ObjectId
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([userId, recipeId])
}
